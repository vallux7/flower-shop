public abstract class Flowers extends Departments {
    static int counFlow =0;

    public Flowers() {
        counFlow++;
    }

    public Flowers(String color, int priceOfPiece, boolean isAvailable, int recNum, Date recDate, Date delDate, Customer info, Departments item) {
        super(color, priceOfPiece, isAvailable, recNum, recDate, delDate, info, item);
    counFlow ++;
    }

   
    
    
    
   @Override
    public double calculatePayment() {
        int totalPrice =counFlow*getPriceOfPiece();
       if (totalPrice>=500) {
        return ((totalPrice)*0.3) - getPriceOfPiece();
        }
         return totalPrice ;
    }
    
}
